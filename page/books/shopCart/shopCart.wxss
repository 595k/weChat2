@import "../count/count-template.wxss";

.cartTop{
    /*display: flex;
    flex-direction: row;
    justify-content: space-between;*/
    width: 100%;
    height: 100rpx;
    text-align: center;
}
.cartTop text{
    line-height: 100rpx;
}
.cartTop text:nth-child(2){
    right: 30rpx;
    position:absolute;
}

.edit{
    display: flex;
    flex-direction: row;
    border-top: 1px solid #fff;
    border-bottom: 1px solid #fff;
    height: 100rpx;
    align-items: center;
}

.cart .checking{
    width: 50rpx;
    height: 50rpx;
    background-color: #C7C4C4;
    border-radius: 25rpx;
    margin: auto 20rpx;
}
.cart .checked{
    width: 50rpx;
    height: 50rpx;
    background-color: #FF7100;
    border-radius: 25rpx;
    margin: auto 20rpx;
}
.cart .checkImg{
    width: 50rpx;
    height: 50rpx;
}

.edit .delete{
    width: 200rpx;
    height: 80rpx;
    background-color: #D20E10;
    text-align: center;
    line-height: 80rpx;
    border-radius: 20rpx;
    position:absolute;
    right: 20rpx;
}
.edit .delete text{
    color: #fff;
}

.shopList {
    margin: 0 auto 100rpx;
}

.list{
    display: flex;
    flex-direction: row;
    position: relative;
    /*align-items: center*/
    height: 220rpx;
    margin: 20rpx auto;
    border-bottom: 1px solid #fff;

}

.list image{
    width: 200rpx;
    height:200rpx;

}
.list .shopInfo{
    margin-left: 20rpx;
}

.cart .money{
    color: red;
}

.list .count{
    position: absolute;
    right: 30rpx;
    bottom: 10rpx;
}

.total{
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    position: fixed;
    bottom: 0px;
    background-color: #fff;
    opacity: 0.9
}
.total text{
	margin-right: 8px;
}

.total .end{

    width: 200rpx;
    height: 80rpx;
    background-color: #FF7100;
    text-align: center;
    line-height: 80rpx;
    /*border-radius: 20rpx;*/
    position:absolute;
    right: 20rpx;
    color: #fff;
}